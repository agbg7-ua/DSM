<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Usuario" table="Usuario">
    <id name="Id" column="IdUsuario" type="long">
      <generator class="identity" />
    </id>

    <property name="Nombre" column="Nombre" />
    <property name="Correo" column="Correo" />
    <property name="Contrasena" column="Contrasena" />
    <property name="Direccion" column="Direccion" />

    <many-to-one name="Rol" class="Rol" column="IdRol" not-null="false" />

    <set name="Pedidos" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="Pedido" />
    </set>

    <set name="Valoraciones" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="Valoracion" />
    </set>

    <set name="Favoritos" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="Favorito" />
    </set>

    <set name="ProductosPublicados" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="Producto" />
    </set>

    <set name="DireccionesEnvio" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="DireccionEnvio" />
    </set>

    <set name="MetodosPago" inverse="true" cascade="all">
      <key column="IdUsuario" />
      <one-to-many class="MetodoPago" />
    </set>
  </class>
</hibernate-mapping>