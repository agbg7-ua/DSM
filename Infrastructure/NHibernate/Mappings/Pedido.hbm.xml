<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2" assembly="ApplicationCore" namespace="ApplicationCore.Domain.EN">
  <class name="Pedido" table="Pedido">
    <id name="Id" column="IdPedido" type="long">
      <generator class="identity" />
    </id>

    <property name="Fecha" type="DateTime" />
    <property name="Estado">
      <type name="NHibernate.Type.EnumStringType`1[[ApplicationCore.Domain.Enums.EstadoPedido, ApplicationCore]]">
      </type>
    </property>
    <property name="PrecioTotal" />

    <many-to-one name="Cliente" class="Usuario" column="IdUsuario" />
    <many-to-one name="DireccionEnvio" class="DireccionEnvio" column="IdDireccion" />
    <many-to-one name="MetodoPago" class="MetodoPago" column="IdMetodo" />

    <set name="Items" inverse="true" cascade="all">
      <key column="IdPedido" />
      <one-to-many class="PedidoItem" />
    </set>
  </class>
</hibernate-mapping>